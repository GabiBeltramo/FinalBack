@model Usuario;
@{
    ViewData["Title"] = "Perfil";
}

<body>
    <div id="fondo" class="align-items-center">

        <div class="row container-lg col-4 align-items-center">
            <form method="post">
                <p id="texto">Dinero disponible:</p>
                <label asp-for="Id" class="input-group-text">Usuario</label>
                <select asp-for="Id" class="form-control" id="Id">
                    <option value="">Elegir Usuario</option>
                    @foreach (var usuario in ViewBag.Usuario)
                    {
                        <option value="@usuario.Id>">@usuario.Nombre </option>
                    }
                </select>

                <button type="submit" asp-action="ModificarFondo" asp-asp-controller="Gestion" class="btn btn-outline-light text-light">Modificar</button>
            </form>
        </div>


        <div id="CrearEtiqueta" class="row container-lg col-4 align-items-center">
            <p id="texto">Etiquetas</p>
            <span>  </span>
            <button type="button" class="btn btn-outline-primary">Supermercado</button>
            <button type="button" class="btn btn-outline-secondary">Farmacia</button>
            <button type="button" class="btn btn-outline-success">Gimnasio</button>
            <button type="button" class="btn btn-outline-info">Veterinaria</button>
            <button type="button" class="btn btn-outline-warning">Ropa</button>
            <button type="button" class="btn btn-outline-danger">Salidas</button>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal">Nueva</button>
        </div>

        <!-- Modal etiqueta nueva -->
        <div class="modal" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <p class="modal-title">Creá una nueva etiqueta</p>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        <form method="post">
                            <div>
                                <label>Nombre: <input asp-for="Nombre" name="Nombre" /> </label>
                            </div>
                        </form>
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" data-bs-dismiss="modal">Guardar</button>
                    </div>

                </div>
            </div>
        </div>

        <div id="AgregarGasto" class="row container-lg col-4 align-items-center">
            <form method="post">
                <p id="texto">Tareas</p>
                <button class="btn btn-outline-light text-light">Agregar Gasto</button>
            </form>
        </div>
    </div>
</body>