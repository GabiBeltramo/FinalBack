@model Usuario;
@{
    ViewData["Title"] = "CrearPerfil";

}

<body>
    <div id="fondo" class="row align-items-center">
        <div id="login" class="container-lg col-5 align-items-center">
            <h1 id="titulo" style="text-align:center">Bienvenido!</h1>
            <p id="texto2" style="text-align:center">Vamos a completar unos datos para que puedas empezar tu proceso de organización económica</p>
            <p id="texto3" style="text-align:center">(O puedas hacer un seguimiento de las malas decisiones que tomaste a la hora de gastar, lo que prefieras)</p>

            <div class="container-lg">
                <form asp-action="CrearPerfil" method="POST">
                    <div class="input-group ">

                        <label id="texto">Ingresá con cuanto dinero contás en el mes:  <input asp-for="Fondo" name="Fondo" /> </label>
                    </div>
                    <div class="container-xl col-4 mb-3 mt-3">
                        <button type="submit" class="btn btn-primary mb-3 mt-3" asp-action="" asp-controller="Usuario">Guardar</button>
                    </div>
                </form>
            </div>

        </div>

    </div>


</body>

<script>onclick</script>
